/* pages/posts/post-item/post-item-template.wxss */
.post-container{
   display: flex;
   flex-direction: column;
   margin-top:20rpx;
   margin-bottom: 40rpx;
   background-color: #fff;
   border-bottom: 1px solid #ededed;
   border-top: 1px solid #ededed;
   padding-bottom: 5px;
 }
 .post-author-date{
   margin:10rpx 0 20rpx 10rpx;
 }
 .post-author{
   width: 100rpx;
   height: 100rpx;
   border-radius: 50rpx;
   vertical-align: middle;
 }
  .post-date{
   width: 20rpx;
   vertical-align: middle;
   margin-bottom: 5px;
   font-size: 26rpx;
 }
 .post-title{
   font-size: 34rpx;
   font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10px;
 }
 .post-image{
   margin-left:16px;
   width:100%;
   height: 340rpx;
   margin: 0 auto;
   margin-bottom: 15px;
 }
 .post-content{
   color: #666;
   font-size: 22rpx;
   margin-bottom: 20rpx;
   margin-left: 20rpx;
   letter-spacing: 2rpx;
   line-height: 40rpx;
 }
 .post-like{
   font-size:13px;
   flex-direction: row;
   line-height: 16px;
   margin-left: 10px;
 }
 .post-like-image{
   height: 24px;
   width: 24px;
   margin-left: 8px;
   vertical-align: middle;
 }
 .post-like-font{
   vertical-align: middle;
   margin-right: 20px
 }